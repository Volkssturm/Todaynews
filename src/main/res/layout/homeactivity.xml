<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/home_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/home_radiog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/home_rd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="首页"
            android:checked="true"
            android:drawableTop="@drawable/frist"
            android:textColor="@drawable/info"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/home_rd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="@drawable/info"
            android:text="视频"
            android:padding="2dp"
            android:drawableTop="@drawable/two"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/home_rd3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="关注"
            android:padding="2dp"
            android:textColor="@drawable/info"
            android:drawableTop="@drawable/three"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
        <RadioButton
            android:id="@+id/home_rd4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="我的"
            android:textColor="@drawable/info"
            android:drawableTop="@drawable/four"
            android:padding="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
    </RadioGroup>
</LinearLayout>