<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/me_Rllt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#5e5353"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="27dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/phone"
                    android:id="@+id/me_phone" />
                <ImageView
                    android:id="@+id/me_weixin"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/weixin"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:id="@+id/me_qq"
                    android:src="@drawable/qq"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/sina"
                    android:id="@+id/me_sina" />
            </LinearLayout>

            <TextView
                android:id="@+id/me_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多登陆方式 >"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/colorAccentwrite"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/me_Rlltwo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#5e5353"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/me_denglu"
                android:src="@mipmap/default_round_head"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/ME_User_name"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/me_denglu"
                android:drawableRight="@drawable/w1"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/me_denglu"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/me_denglu"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/me_dongtai"
                    android:text="动态"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccentwrite"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/me_fensi"
                    android:text="粉丝"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccentwrite"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/me_fangke"
                    android:text="7天访客"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccentwrite"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/me_radiog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/me_rd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="收藏"
                android:checked="true"
                android:padding="5dp"
                android:drawableTop="@drawable/libr"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/me_rd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="历史"
                android:padding="5dp"
                android:drawableTop="@drawable/hist"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/me_rd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="夜间"
                android:padding="5dp"
                android:drawableTop="@drawable/night"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"/>

        </RadioGroup>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/me_xiaoxi"
            android:text="消息通知"
            android:padding="8dp"
            android:textSize="25dp"
            android:textColor="@color/colorAccentblack"
            android:drawableRight="@drawable/w1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_toutiao"
            android:layout_marginTop="30dp"
            android:text="头条商城"
            android:padding="8dp"
            android:textSize="25dp"
            android:textColor="@color/colorAccentblack"
            android:layout_below="@id/me_xiaoxi"
            android:drawableRight="@drawable/w1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_teigong"
            android:text="京东特供"
            android:padding="8dp"
            android:textSize="25dp"
            android:layout_below="@id/me_toutiao"
            android:textColor="@color/colorAccentblack"
            android:drawableRight="@drawable/w1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_baoliao"
            android:layout_marginTop="30dp"

            android:layout_below="@id/me_teigong"
            android:text="我要爆料"
            android:padding="8dp"
            android:textSize="25dp"
            android:textColor="@color/colorAccentblack"
            android:drawableRight="@drawable/w1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/me_yonghu"
            android:layout_below="@id/me_baoliao"
            android:text="用户反馈"
            android:padding="8dp"
            android:textSize="25dp"
            android:textColor="@color/colorAccentblack"
            android:drawableRight="@drawable/w1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/me_shezhi"
            android:layout_below="@id/me_yonghu"
            android:text="系统设置"
            android:padding="8dp"
            android:textSize="25dp"
            android:textColor="@color/colorAccentblack"
            android:drawableRight="@drawable/w1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</RelativeLayout>
    </LinearLayout>
</ScrollView>


</LinearLayout>